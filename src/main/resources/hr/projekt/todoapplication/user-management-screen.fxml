<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.projekt.todoapplication.controller.UserManagementController">
    <top>
        <VBox>
            <VBox fx:id="menuContainer" />
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="27.0" prefWidth="1139.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Upravljanje korisnicima" />
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
        </VBox>
    </top>
    <center>
        <TableView fx:id="userTable">
            <columns>
                <TableColumn fx:id="columnUsername" prefWidth="256.0" text="Korisničko ime" />
                <TableColumn fx:id="columnUserType" prefWidth="216.0" text="Tip" />
                <TableColumn fx:id="columnEventCount" prefWidth="236.0" text="Broj događaja" />
                <TableColumn fx:id="columnActions" prefWidth="215.0" text="Akcije" />
            </columns>
         <BorderPane.margin>
            <Insets bottom="50.0" left="50.0" right="50.0" />
         </BorderPane.margin>
        </TableView>
    </center>

</BorderPane>
