<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.projekt.todoapplication.controller.EventSearchController">
    <top>
        <VBox alignment="CENTER" spacing="10.0">
            <VBox fx:id="menuContainer" />
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Pretraga događaja" textAlignment="CENTER" />
            <HBox alignment="CENTER" spacing="8">

                <ComboBox fx:id="comboCriteria" prefHeight="25.0" prefWidth="215.0" />
                <TextField fx:id="searchField" prefHeight="25.0" prefWidth="374.0" promptText="Upiši bilo što (naslov/opis/korisnik)..." />
                <Button onAction="#applySearch" text="Pretraži" />
                <Button onAction="#clearSearch" text="Očisti" />
            <VBox.margin>
               <Insets bottom="15.0" left="10.0" right="10.0" />
            </VBox.margin>
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="table">
            <columns>
                <TableColumn fx:id="columnUser" prefWidth="202.0" text="Korisnik" />
                <TableColumn fx:id="columnTitle" prefWidth="188.0" text="Naslov" />
                <TableColumn fx:id="columnDesc" prefWidth="497.0" text="Opis" />
                <TableColumn fx:id="columnDate" prefWidth="136.0" text="Rok" />
            </columns>
        </TableView>
    </center>

</BorderPane>
