<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.projekt.todoapplication.controller.MenuController">
        <MenuBar AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
                 AnchorPane.rightAnchor="0.0">
                <Menu mnemonicParsing="false" text="Događaji">
                        <MenuItem mnemonicParsing="false" onAction="#openHome" text="Početak" />
                        <MenuItem mnemonicParsing="false" onAction="#openEventSearch" text="Pretraži" />
                        <MenuItem mnemonicParsing="false" onAction="#openAddEvent" text="Dodaj" />
                        <MenuItem mnemonicParsing="false" onAction="#logoutEvent" text="Odjavi se" />
                </Menu>
                <Menu mnemonicParsing="false" text="Kreiraj backup">
                        <MenuItem mnemonicParsing="false" onAction="#backupUsers" text="Tablica korisnici" />
                        <MenuItem mnemonicParsing="false" onAction="#backupEvents" text="Tablica događaji" />
                </Menu>
        </MenuBar>
</AnchorPane>
